{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "npm install",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "npm start; npx tailwindcss -i ./src/index.css -o ./src/dist/output.css --watch"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "src/App.js"
      ]
	},
	"vscode": {
		"extensions": [
			"GitHub.copilot",
			"bradlc.vscode-tailwindcss"
		]
	}
  },
  "portsAttributes": {
	"3000": {
		"label": "Development Server",
		"onAutoForward": "openPreview",
    "visibility": "public"
	}
},
  "forwardPorts": [3000]
}
